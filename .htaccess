RewriteEngine On
# If requested URL isn't a real file or directory...
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# ...and if adding .html would match an existing file
RewriteCond %{REQUEST_FILENAME}.html -f
# Then internally rewrite to the .html file
RewriteRule ^(.*)$ $1.html [L]